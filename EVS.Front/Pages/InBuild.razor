@page "/InBuild"
@using MudBlazor
@inherits LayoutComponentBase


<MudPaper Style=" mud-theme-primary; display: flex; flex-direction: column; justify-content: center; align-items: center; margin-top: 2em;">

	<MudText Typo="Typo.h2" Align="Align.Center" Color="Color.Primary" Style="margin-top:2em">
		Cette page est encore en construction !
	</MudText>

	<MudText Typo="Typo.h5" Align="Align.Center" Color="Color.Dark" Style="margin-top:2em">
		N'hesitez pas à revenir bientôt pour voir nos nouvelles fonctionnalités!
	</MudText>

	@if (this.darkModeActive)
	{
		<MudImage Src="images/VoitureFaceArretPhare.png" Alt="Simone" Style="margin:2em 0" />
	}
	else
	{
		<MudImage Src="images/VoitureFaceArret.png" Alt="Simone" Style="margin:2em 0" />
	}

</MudPaper>


